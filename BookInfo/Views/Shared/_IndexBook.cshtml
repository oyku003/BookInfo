@using BookInfo.Entities
@using BookInfo.Models
@using PagedList
@using PagedList.Mvc
@using BookInfo.Entities.EntityModel
@model  List<Book>

<div class="row">
    @if (Model != null && Model.Count > 0)
    {
        foreach (Book book in Model)
        {
            <div class="col-md-4 " data-note-id="@book.Id">
                <div class="thumbnail" style="height:250px">
                    <img src="~/Images/Mustafa_Kemal.jpg" style="height:150px;width:100px" alt="@book.Name">
                    <div class="caption" style="height:105px">
                        <h4 style="text-align:center">
                            <a href="/Home/Kitap/@book.Id">
                                @book.Name
                            </a>
                        </h4>
                        <h6 style="text-align:center">
                            @book.Author.Name<br />
                            @book.Year<br />
                            @book.Publisher.Name
                        </h6>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
      <div class="alert-danger">Filtrelemenize uygun kitap bulunamamıştır</div>
    }

</div>
